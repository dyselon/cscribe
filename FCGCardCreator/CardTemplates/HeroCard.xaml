<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="240"
        Width="336"
        Background="White"
        BorderBrush="Black"
        BorderThickness="3"
        CornerRadius="15">
    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
    <!-- Name, Concept, Race/Class -->
    <Label Content="{Binding Name}" FontSize="18" FontWeight="Bold" FontFamily="Arial Black"/>
    <Label Content="{Binding Subtitle}"/>
    <Label Content="{Binding Race}"/>
    <!-- Ability Scores -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0">
            <Label Content="F"/>
            <Label Content="8/+4"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1">
            <Label Content="T"/>
            <Label Content="6/+3"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="2">
            <Label Content="F"/>
            <Label Content="4/+2"/>
        </StackPanel>
    </Grid>
    <!-- Ability -->
    <Label>Recycle</Label>
    <Label>2 Gold, Discard a loot card: Draw a loot card.</Label>
    </StackPanel>
</Border>